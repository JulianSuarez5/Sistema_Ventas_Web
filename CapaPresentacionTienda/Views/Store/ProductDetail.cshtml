@model CapaEntidad.clsProducto
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="@Url.Content(Model.RutaImagen)" alt="..." /></div>
            <div class="col-md-6">
                <div class="small mb-1">Marca: @Html.DisplayTextFor(m => m.objMarca.Descripcion)</div>
                <h1 class="display-5 fw-bolder">@Html.DisplayTextFor(m => m.Nombre)</h1>
                <div class="fs-5 mb-5">
                    <span>$ @Model.Precio.ToString("N2", System.Globalization.CultureInfo.CreateSpecificCulture("es-US")) USD</span>
                </div>

                <!-- Descripción colapsable -->
                <div class="description-container mb-4">
                    <h5 class="mb-3">Descripción del Producto</h5>
                    <div class="description-preview collapsed">
                        <div class="description-text">
                            @Html.Raw(Model.Descripcion.Replace("\n", "<br>"))
                        </div>
                    </div>
                    <button class="btn btn-outline-primary btn-sm toggle-description mt-2" type="button">
                        <span class="show-more">
                            <i class="fas fa-chevron-down me-1"></i>Ver descripción completa
                        </span>
                        <span class="show-less d-none">
                            <i class="fas fa-chevron-up me-1"></i>Ver menos
                        </span>
                    </button>
                </div>

                <div class="d-flex">
                    <a href="@Url.Action("Index","Store")" class="btn btn-danger w-50 text-center me-3">
                        <i class="fas fa-undo-alt"></i> Regresar
                    </a>
                    @if (Session["Cliente"] != null)
                    {
                        <button class="btn btn-success agregaracarrito flex-shrink-0 w-50" type="button" data-idproducto="@Html.DisplayTextFor(m => m.IdProducto)">
                            <i class="fas fa-cart-plus"></i>
                            Agregar al carrito
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* Estilos mejorados para la descripción */
    .description-container {
        border: 1px solid #e9ecef;
        border-radius: 8px;
        padding: 20px;
        background-color: #f8f9fa;
    }

        .description-container h5 {
            color: #495057;
            font-weight: 600;
            margin-bottom: 15px;
            border-bottom: 2px solid #007bff;
            padding-bottom: 8px;
        }

    .description-preview {
        position: relative;
        overflow: hidden;
        transition: max-height 0.5s ease-in-out;
        line-height: 1.6;
    }

        .description-preview.collapsed {
            max-height: 120px;
        }

            .description-preview.collapsed::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                height: 50px;
                background: linear-gradient(transparent, #f8f9fa);
                pointer-events: none;
            }

    .description-text {
        color: #6c757d;
        font-size: 15px;
        text-align: justify;
    }

        .description-text p {
            margin-bottom: 12px;
        }

    .toggle-description {
        font-size: 14px;
        font-weight: 500;
        border: 1px solid #007bff !important;
        transition: all 0.3s ease;
    }

        .toggle-description:hover {
            background-color: #007bff;
            color: white !important;
            transform: translateY(-1px);
            box-shadow: 0 2px 4px rgba(0,123,255,0.2);
        }

        .toggle-description:focus {
            box-shadow: 0 0 0 0.25rem rgba(0,123,255,0.25);
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .description-container {
            padding: 15px;
        }

        .description-preview.collapsed {
            max-height: 100px;
        }
    }
</style>

@section scripts{
    <script>
        $(document).on("click", "button.agregaracarrito", function () {
            var idProducto = $(this).data("idproducto");
            console.log(idProducto);
            jQuery.ajax({
                url: "@Url.Action("AddToCart", "Store")",
                type: "POST",
                data: JSON.stringify({ IdProducto: idProducto }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data.respuesta) {
                        MostrarProductosEnCarrito();
                        swal({
                            title: "Agregado al carrito",
                            text: "¿Deseas ir al carrito?",
                            type: "success",
                            showCancelButton: true,
                            confirmButtonClass: "btn-primary",
                            confirmButtonText: "Si",
                            cancelButtonText: "No",
                            closeOnConfirm: true
                        }, function () {
                            window.location.href = '@Url.Action("Cart","Store")';
                        });
                    } else {
                        swal("", data.mensaje, "warning");
                    }
                }
            });
        });

        // Script para la descripción colapsable
        $(document).ready(function() {
            $('.toggle-description').on('click', function() {
                var $preview = $(this).siblings('.description-preview');
                var $showMore = $(this).find('.show-more');
                var $showLess = $(this).find('.show-less');

                if ($preview.hasClass('collapsed')) {
                    $preview.removeClass('collapsed');
                    $showMore.addClass('d-none');
                    $showLess.removeClass('d-none');
                } else {
                    $preview.addClass('collapsed');
                    $showMore.removeClass('d-none');
                    $showLess.addClass('d-none');
                }
            });
        });
    </script>
}